$theme_color=#373277
.nav-bar
  position sticky
  top 0
  left 0
  right 0
  height 50px
  background $theme_color
  color white
  z-index 99
  box-shadow 0.5px 0.5px black
  .container
    position relative
    margin 0 auto
    width 90%
    height 100%
    max-width 1140px
  .logo
    height 50px
    line-height 50px
    font-weight 300
    font-size 1.3rem
    display inline-block
    vertical-align middle
    > a
      color white
  .nav-link
    font-weight 300
    color #afadc8
    display inline-block
    vertical-align middle
    margin-left 20px
    transition color 0.05s linear
    &:hover
      color white

