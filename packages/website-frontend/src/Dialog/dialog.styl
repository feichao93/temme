@import "../button.styl"

// confirm dialog
.confirm-dialog
  background #3c3f41
  color white
  padding 5px
  width 350px
  height 90px
  .message
    padding-left 10%
    height 30px
    line-height 30px
    font-weight 300
  .dialog-buttons
    .dialog-button
      height 30px
      width 70px
      color white
      font-weight 300
      &.confirm
        background #365880
      &.cancel
        background #4c5052
