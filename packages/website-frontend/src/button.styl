.dialog-buttons
  display flex
  justify-content flex-end
  margin-top 10px
.dialog-button
  padding 5px
  color #24292e
  border 1px solid rgba(27,31,35,0.35)
  border-radius 3px
  outline none
  cursor pointer
  background-color #e6ebf1
  background-image linear-gradient(-180deg, #f0f3f6, #e6ebf1 90%)
  background-position -0.5em
  margin 5px
  &:active
    background-image none
    border-color rgba(27,31,35,.35)
    box-shadow inset 0 0.15em 0.3em rgba(27,31,35,.15)
  &.error
    background red
    color white
    &:active
      background-color #d00303
  &.success
    background #32c955
    color white
    &:active
      background-color #279f43
