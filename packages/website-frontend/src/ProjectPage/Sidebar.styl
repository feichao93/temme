$list-item {
  line-height 24px
  cursor pointer

  &:hover {
    background #2a2d2e
  }
}

.sidebar {
  background #252526
  color #ccc
  font-size 14px
  height 100%
  display flex
  flex-flow column
  overflow hidden

  > header {
    .title {
      display flex
      margin 0
      padding-left 8px
      height 35px
      line-height @height
      background #2d2d2d

      > span {
        font-size 18px
        white-space pre
        overflow hidden
        text-overflow ellipsis
      }
    }

    .description {
      margin 8px 16px
    }
  }

  .view-container {
    flex 1 1 auto
    width 100%
    display flex
    .view {
      flex 0 0 100%
      display flex
      flex-flow column
      overflow-x hidden
      ::-webkit-scrollbar {
        width: 13px
      }
      ::-webkit-scrollbar-thumb {
        background-color: rgba(121, 121, 121, 0.4)
      }
      ::-webkit-scrollbar-track {
        background: transparent
      }
    }
  }

  .view-title {
    display flex
    background #2d2d2d
    flex-shrink 0
    > h2 {
      margin 0
      font-size 16px
      height 32px
      line-height @height
      padding-left 8px
    }
  }

  .view-content {
    padding 10px 0
    overflow-y auto
  }

  .modify-hint {
    font-weight normal
    color #32adff
    margin-left 16px
    border-radius 3px
    font-size 12px
  }

  .folder-list {
    margin 0
    padding 0 8px
    user-select none

    > li {
      flex 0 0 auto
      display flex
      align-items center
      cursor pointer
      padding 2px 0

      &:first-child {
        margin-top 0
      }

      &:hover {
        background #2a2e35
        .actions {
          display flex
          padding-left 8px
        }
      }

      &.active {
        background #234a6d
        color white
      }


      .folder-icon, .folder-open-icon {
        flex-shrink 0
        margin-left 4px
        margin-right 8px
      }

      .page-name-wrapper {
        display flex
        align-items center
        line-height 24px
        height @line-height
        overflow hidden
        white-space nowrap
      }

      .actions {
        display none
        flex 0 0
        margin-right 8px
      }
    }
  }

  .view-content > section {
    padding 0 8px
  }
}
