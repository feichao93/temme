$list-item {
  line-height 24px
  cursor pointer

  &:hover {
    background #2a2d2e
  }
}

.sidebar {
  width 250px // todo change to percentage
  background #252526
  color #ccc
  font-size 14px

  .part-content {
    padding 10px 0
  }

  .part.pages-part {
    user-select none
  }

  .part-title {
    line-height 24px
    background #383838
    padding-left 8px
    text-transform uppercase
    font-weight bold
    font-family sans-serif
  }

  .list {
    list-style none
    padding 0
    margin 0

    > li {
      @extends $list-item
      padding-left 16px
      &.active {
        background #1a496f
      }
    }
  }
}
