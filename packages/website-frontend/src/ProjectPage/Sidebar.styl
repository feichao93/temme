$list-item {
  line-height 24px
  cursor pointer

  &:hover {
    background #2a2d2e
  }
}

.sidebar {
  background #252526
  color #ccc
  font-size 14px
  height 100%
  display flex
  flex-flow column
  overflow hidden

  > header {
    .title {
      display flex
      margin 0
      padding-left 8px
      font-size 20px
      line-height 35px
      background #2d2d2d
    }

    .description {
      margin 8px 16px
    }
  }

  .view-container {
    flex 1 1 auto
    width 100%
    display flex
    .view {
      flex 0 0 100%
      display flex
      flex-flow column
      overflow-x hidden
      ::-webkit-scrollbar {
        width: 13px
      }
      ::-webkit-scrollbar-thumb {
        background-color: rgba(121, 121, 121, 0.4)
      }
      ::-webkit-scrollbar-track {
        background: transparent
      }
    }
  }

  .view-title {
    display flex
    background #2d2d2d
    flex-shrink 0
    > h2 {
      margin 0
      font-size 16px
      height 32px
      line-height @height
      padding-left 8px
    }
  }

  .view-content {
    padding 10px 0
    overflow-y auto
  }

  .folder-list {
    margin 0
    padding 0 8px
    user-select none

    > li {
      flex 0 0 auto
      display flex
      align-items center
      cursor pointer
      padding 2px 0

      &.active {
        background #234a6d
        color white
      }
      &:first-child {
        margin-top 0
      }

      .folder-icon, .folder-open-icon {
        flex-shrink 0
        margin-left 4px
        margin-right 8px
      }

      .text {
        display flex
        flex-flow column
        overflow hidden
        .folder-name {
          line-height 24px
          height @line-height
          overflow hidden
          text-overflow ellipsis
          white-space nowrap
        }
      }

      .actions {
        flex 0 0
      }
    }
  }


  .view-content > section {
    padding 0 8px
  }

  .section-title {
    display flex
    line-height 24px
    text-transform uppercase
  }

  .simple-list {
    list-style none
    user-select none
    padding 0
    margin 0

    > li {
      @extends $list-item
      display flex
      align-items center
      padding-left 16px

      &.active {
        background #1a496f
      }

      .actions {
        visibility hidden
      }

      &:hover .actions {
        visibility visible
      }
    }
  }
}
