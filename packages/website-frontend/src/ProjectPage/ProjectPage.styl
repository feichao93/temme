.project-page {
  height 100vh
  display flex
  flex-flow column
  background #1e1e1e

  a:hover {
    text-decoration initial
  }

  > nav {
    display flex
    align-items center
    flex 0 0 40px
    color #cccccc
    background #3c3c3c

    > a:hover {
      text-decoration underline
    }

    > h1 {
      margin 0
      font-size 32px

      > a {
        padding 0 16px
        color #ccc
      }
    }
  }

  > main {
    display flex
    flex-grow 1
    position relative
  }
}

.actions {
  margin-left auto
  margin-right 16px
  display flex
  align-items center
}

.icon.interactive {
  cursor pointer
  transition transform 50ms ease

  &:active {
    transform scale(1.272)
  }

  &.disabled {
    cursor default
    opacity 0.5

    &:active {
      transform none
    }
  }
}

.tablist {
  flex-shrink 0
  height 35px
  display flex
  font-size 13px
  color rgba(255, 255, 255, 0.5)
  background #2d2d2d

  .tab {
    flex-shrink 0
    display flex
    align-items center
    padding-left 12px
    padding-right 8px
    border-right 1px solid #252525
    cursor pointer
    user-select none

    &.active {
      color white
      background #1e1e1e
    }

    .tabname {
      padding-left 10px
      padding-right 6px
    }
  }

  .exec-info {
    align-self center
    margin-left 16px
    color #56d272
  }
}
