.project-page {
  height 100vh
  display flex
  flex-flow column
  background #1e1e1e

  > nav {
    display flex
    align-items center
    flex 0 0 40px
    color #cccccc
    background #3c3c3c

    > h1 {
      margin 0
      font-size 32px

      > a {
        padding 0 16px
        color #ccc
      }
    }
  }

  > main {
    display flex
    flex-grow 1
    position relative
  }
}

.actions {
  margin-left auto
  margin-right 16px
  display flex
  align-items center
}

.icon.interactive {
  cursor pointer
  transition transform 50ms ease

  &:active {
    transform scale(1.272)
  }

  &.disabled {
    cursor default
    opacity 0.5

    &:active {
      transform none
    }
  }
}
