.project-page {
  height 100vh
  display flex
  flex-flow column
  background #1e1e1e

  > nav {
    display flex
    align-items center
    flex 0 0 40px
    color #cccccc
    background #3c3c3c

    > h1 {
      margin 0
      font-size 32px

      > a {
        padding 0 16px
        color #ccc
      }
    }
  }

  > main {
    display flex
    flex-grow 1
    position relative
  }

  .editor-container {
    width 100%
    height 100%
  }
}
