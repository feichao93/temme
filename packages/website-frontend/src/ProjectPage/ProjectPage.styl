.project-page {
  height 100vh
  display flex
  flex-flow column
  background #1e1e1e

  > nav {
    flex 0 0 40px
    color #cccccc
    background #3c3c3c
  }

  .main {
    display flex
    flex-grow 1
    position relative
  }

  .resizer {
    position absolute
    z-index 1

    &.vertical {
      top 0
      bottom 0
      width 4px
      margin-left -(@width / 2)
      background red
      cursor ew-resize
    }

    &.horizontal {
      left 0
      right 0
      height 4px
      margin-top -(@height / 2)
      background red
      cursor ns-resize
    }
  }

  .left, .right {
    display flex
    flex-flow column
    position relative
  }

  .editor-container {
    flex 1 1 0
    overflow hidden
  }
}
