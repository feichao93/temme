.main-page {
  padding-top 50px
  height 100vh
  display flex
  flex-flow column

  > main {
    flex 0 0 auto
    display flex
    flex-flow column

    .intro-text {
      width 800px
      margin auto
      > h1 {
        font-size 30px
      }
      > p {
        margin auto
        font-size 20px
        line-height 1.5
      }
    }

    .recommendations {
      margin auto
      width 800px
      margin-top 24px

      .project-list {
        .project-item:first-child {
          padding-top 0
        }
      }
    }
  }

  > footer {
    margin-top auto
    height 60px
    text-align center
    line-height @height
    background #19486b
    color white
    > a {
      color inherit
    }
  }
}

