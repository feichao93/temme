.main-page {
  padding-top 50px
  height 100vh
  display flex
  flex-flow column

  > main {
    display flex
    flex-flow column

    .intro-text {
      text-align center
      > h1 {
        font-size 30px
      }
      > p {
        margin auto
        font-size 20px
        line-height 1.5
      }
    }

    .examples {
      //width 1000px
      margin auto
    }
  }

  > footer {
    margin-top auto
    height 60px
    text-align center
    line-height @height
    background #19486b
    color white
    > a {
      color inherit
    }
  }
}

