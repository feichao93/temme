.user-page {
  padding-top 50px

  > main {
    display flex
    justify-content center
    margin-top 24px
  }
}

.user-profile {
  flex 0 0 230px
  line-height 21px

  .mb16 {
    margin-bottom 16px
  }
  .avatar {
    max-width 100%
    border-radius 3px
  }
  .fullname {
    font-size 26px
    line-height 30px
    font-weight bold
  }
  .username {
    font-size 20px
    font-weight lighter
    line-height 24px
    color #666
  }
  .location, .email {
    display flex
    align-items center
    padding-top 4px
  }
  .email {
    color #0366d6
  }
}

.user-project {
  flex 0 0 700px
  margin-left 24px

  .tab-bar {
    display flex
    border-bottom solid 1px #d1d5da
    position relative

    .tab {
      display inline-block
      padding 16px 8px
      font-size 14px

      .count {
        margin-left 5px
        display inline-block
        padding 2px 5px
        font-size 12px
        font-weight 600
        line-height 1
        color #586069
        background-color rgba(27, 31, 35, 0.08)
        border-radius 20px
      }
    }
  }

  .project-item {
    position relative
    padding 24px 0
    border-bottom solid 1px #d1d5da

    &:hov .manage-project {
      visibility visible
    }

    .project-name {
      display inline-block
      font-size 20px
      font-weight 700
      color #0366d6
      margin-bottom 15px
    }

    a.project-name {
      text-decoration none
      cursor pointer

      &:hover {
        text-decoration underline
      }
    }

    .project-description {
      margin-bottom 15px
      font-size 14px
      color #586069
    }

    .project-update {
      color #586069
      font-size 12px
      display inline-block
      vertical-align middle
    }

    .manage-project {
      position absolute
      top 25px
      right 25px
      width 50px
      display flex
      justify-content space-between
      visibility hidden

      > span {
        cursor pointer
      }
    }
  }
}

.divider {
  width 100%
  margin 10px 0
  height 1px
  background #d1d5da
}
