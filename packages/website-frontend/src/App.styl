$theme_color=#373277
*
  box-sizing border-box

html {
  font-family -apple-system,BlinkMacSystemFont,Segoe WPC,Segoe UI,HelveticaNeue-Light,Ubuntu,Droid Sans,sans-serif
}

body
  padding 0
  margin 0
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  #app
    background white
    height 100%
.title-bar
  position sticky
  top 0
  left 0
  right 0
  height 50px
  background $theme_color
  color white
  z-index 99
  box-shadow 0.5px 0.5px black
  .container
    position relative
    margin 0 auto
    width 90%
    height 100%
    max-width 1140px
  .name
    height 50px
    line-height 50px
    font-weight 300
    font-size 1.3rem
    display inline-block
    vertical-align middle
    a
      color white


.align-left
  position absolute
  top 0
  left 0
  bottom 0
.align-right
  position absolute
  top 0
  right 0
  bottom 0

.main-page
  padding-top 50px
  text-align center
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  color white
  .intro-text
    background #478aff
    height 100px
.button
  display flex
  align-items center
  justify-content center
.auth
  outline 0
  cursor pointer
  margin 0
  border-radius 0
  background #0078cfcc
  font-size 1rem
  color #fff
  border none
  font-weight 500
  position relative
  height 50px
  padding 0 20px
  &:hover
    background #016fbfcc
.example
  padding 40px 0 40px 0
  background #262353
  position relative
a
  text-decoration none
