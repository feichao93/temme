$theme_color=#373277
*
  box-sizing border-box

body
  padding 0
  margin 0
  position absolute
  top 0
  left 0
  right 0
  bottom 0
header
  position fixed
  top 0
  left 0
  right 0
  height 50px
  background $theme_color
  color white
  z-index 9999
  box-shadow 0.5px 0.5px black
  .container
    position relative
    margin 0 auto
    width 70%
    height 100%
  .name
    height 50px
    line-height 50px
    font-weight 300
    font-size 1.3rem
    display inline-block
    vertical-align middle


.align-left
  position absolute
  top 0
  left 0
.align-right
  position absolute
  top 0
  right 0

main
  padding-top 50px
  text-align center
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  color white
  .intro-text
    background #478aff
    height 100px
    margin 50px 0
.button
  display flex
  align-items center
  justify-content center
  width 155px
.auth
  outline 0
  cursor pointer
  margin-bottom 0
  border-radius 0
  background rgba(0,120,207,0.8)
  font-size 1rem
  color #fff
  border none
  font-weight 500
  position relative
  height 50px
  padding 0 20px
.example
  padding 40px 0 40px 0
  background #262353
  position relative
