.dialog-container
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  z-index 20
  background #00000080

  .dialog
    position absolute
    top 30%
    left 50%
    transform translate(-50%,-50%)
    margin 10px auto
    overflow-y auto
    display flex

.project-dialog
  width 250px
  padding 10px 20px
  background white
  .name,.title
    color gray
    padding 5px 0
  .title
    color black
    border-bottom 1px solid #d1d5da
  input
    background-color #fafbfc
    margin-right 5px
    width 100%
    border 1px solid #d1d5da
    border-radius 3px
    box-shadow inset 0 1px 2px rgba(27,31,35,.075)
    color #24292e
    font-size 16px
    line-height 20px
    min-height 34px
    padding 5px
  .dialog-buttons
    display flex
    justify-content flex-end
    margin-top 10px
