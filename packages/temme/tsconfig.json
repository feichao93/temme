  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "es2015",
    "outDir": "build",
    "target": "es2017",
    "noImplicitAny": true,
    "declaration": true,
    "declarationDir": "build",
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
