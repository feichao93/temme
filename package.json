{
  "name": "temme",
  "version": "0.8.0-SNAPSHOT",
  "description": "Concise and convenient jQuery-like selector for node crawlers.",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "repository": "https://github.com/shinima/temme.git",
  "homepage": "https://temme.js.org",
  "author": "Shi Feichao <842351815@qq.com> (shinima.pw)",
  "license": "MIT",
  "bin": "./bin/temme.js",
  "engines": {
    "node": ">= 6"
  },
  "files": [
    "LICENSE",
    "readme.md",
    "bin/",
    "build/",
    "browser/"
  ],
  "scripts": {
    "test": "jest --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "build": "webpack --env.node --env.web",
    "playground:start": "webpack-dev-server --config webpack.playground.config.ts --mode development",
    "playground:build": "webpack --config webpack.playground.config.ts --mode production && cp -r playground/public/* playground-build"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ],
    "collectCoverage": true
  },
  "dependencies": {
    "@types/cheerio": "^0.22.8",
    "@types/invariant": "^2.2.29",
    "cheerio": "^1.0.0-rc.2",
    "commander": "^2.16.0",
    "invariant": "^2.2.4"
  },
  "devDependencies": {
    "@types/html-webpack-plugin": "^3.2.0",
    "@types/jest": "^23.1.4",
    "@types/node": "^10.5.2",
    "@types/pegjs": "^0.10.1",
    "@types/webpack": "^4.4.5",
    "awesome-typescript-loader": "^5.2.0",
    "coveralls": "^3.0.2",
    "html-webpack-plugin": "^3.2.0",
    "husky": "1.0.0-rc.13",
    "jest": "^23.3.0",
    "lint-staged": "^7.2.0",
    "lodash.debounce": "^4.0.8",
    "pegjs": "^0.10.0",
    "pegjs-loader": "^0.5.4",
    "prettier": "^1.13.7",
    "pretty": "^2.0.0",
    "ts-jest": "^23.0.0",
    "ts-node": "^7.0.0",
    "typescript": "^2.9.2",
    "webpack": "^4.15.1",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.5"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "husky": {
    "pre-commit": "lint-staged",
    "pre-push": "jest"
  },
  "lint-staged": {
    "{src,__tests__,bin,playground}/**/*.{ts,js}": [
      "prettier --write",
      "git add"
    ]
  }
}
