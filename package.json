{
  "name": "temme",
  "version": "0.7.0",
  "description": "Concise and convenient jQuery-like selector for node crawlers.",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "repository": "https://github.com/shinima/temme.git",
  "homepage": "https://temme.js.org",
  "author": "Shi Feichao <842351815@qq.com> (shinima.pw)",
  "license": "MIT",
  "bin": "./bin/temme.js",
  "engines": {
    "node": ">= 6"
  },
  "files": ["LICENSE", "readme.md", "bin/", "build/", "browser/"],
  "scripts": {
    "test":
      "jest --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "build": "webpack --env.node --env.web",
    "build-playground":
      "webpack --config webpack.playground.config.ts --mode production && cp -r playground/public/* playground-build"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "json", "jsx"],
    "collectCoverage": true
  },
  "dependencies": {
    "@types/cheerio": "^0.22.7",
    "@types/invariant": "^2.2.29",
    "cheerio": "^1.0.0-rc.1",
    "commander": "^2.15.1",
    "invariant": "^2.2.4"
  },
  "devDependencies": {
    "@types/html-webpack-plugin": "^2.30.3",
    "@types/jest": "^22.2.3",
    "@types/node": "^10.0.3",
    "@types/pegjs": "^0.10.0",
    "@types/webpack": "^4.1.3",
    "awesome-typescript-loader": "^5.0.0",
    "coveralls": "^3.0.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^22.4.3",
    "lodash.debounce": "^4.0.8",
    "pegjs": "^0.10.0",
    "pegjs-loader": "^0.5.4",
    "prettier": "^1.12.1",
    "pretty": "^2.0.0",
    "ts-jest": "^22.4.4",
    "ts-node": "^6.0.0",
    "typescript": "^2.8.3",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.0.15"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
